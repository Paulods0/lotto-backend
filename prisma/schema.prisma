generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum AgentType {
  lotaria_nacional
  revendedor
}

enum Genre {
  masculino
  feminino
}

enum AgentStatus {
  ativo
  inativo
  pendente
}

enum UserRole {
  dev
  super_admin
  area_manager
  supervisor
}

model User {
  id         String   @id @default(uuid())
  first_name String
  last_name  String
  email      String   @unique
  password   String
  role       UserRole

  created_at DateTime @default(now())

  reset_password_token ResetPasswordToken?

  @@map("users")
}

model Agent {
  id               String      @id @default(uuid())
  id_reference     Int?
  first_name       String
  last_name        String
  genre            Genre
  phone_number     Int?
  afrimoney_number Int?
  agent_type       AgentType
  bi_number        String?
  status           AgentStatus @default(pendente)
  created_at       DateTime    @default(now())

  terminal Terminal?
  pos      Pos?

  @@map("agents")
}

model Terminal {
  id           String   @id @default(uuid())
  id_reference Int?
  serial       String
  sim_card     Int
  pin          Int?
  puk          Int?
  status       Boolean  @default(false)
  agent_id     String?  @unique
  created_at   DateTime @default(now())

  agent Agent? @relation(fields: [agent_id], references: [id])

  @@map("terminals")
}

model Pos {
  id           String   @id @default(uuid())
  id_reference Int?     @unique
  latitude     Float
  longitude    Float
  agent_id     String?  @unique
  licence_id   String?  @unique
  type_id     Int?  @unique
  subtype_id   Int?  @unique
  area_id   Int?  @unique
  zone_id   Int?  @unique
  city_id   Int?  @unique
  admin_id   Int?  @unique
  province_id   Int?  @unique
  created_at   DateTime @default(now())
  
  type Type? @relation(fields: [type_id],references: [id] )
  area Area? @relation(fields: [area_id],references: [id] )
  zone Zone? @relation(fields: [zone_id],references: [id] )
  city City? @relation(fields: [city_id],references: [id] )
  agent   Agent?   @relation(fields: [agent_id], references: [id])
  subtype Subtype? @relation(fields: [subtype_id],references: [id])
  licence Licence? @relation(fields: [licence_id], references: [id])
  province Province? @relation(fields: [province_id],references: [id])
  admin Administration? @relation(fields: [admin_id],references: [id])

  @@map("pos")
}

model Licence {
  id            String    @id @default(uuid())
  number        String
  description   String
  latitude      Float?
  longitude     Float?
  file          String?
  reference     String  
  pos           Pos?  
  creation_date DateTime? @default(now())
  created_at    DateTime  @default(now())
  admin_id      Int?

  admin Administration? @relation(fields: [admin_id], references: [id])

  @@map("licences")
}

model Administration {
  id       Int    @id @default(autoincrement())
  name     String
  licences Licence[]
  pos Pos[]

  @@map("administrations")
}

model Province {
  id     Int @id @default(autoincrement())
  name   String @unique
  cities City[]
  pos Pos[]

  @@map("provinces")
}

model City {
  id          Int @id @default(autoincrement())
  name        String @unique
  province_id Int
  pos Pos[]

  province Province? @relation(fields: [province_id], references: [id])

  @@map("cities")
}

model Area {
  id    Int @id @default(autoincrement())
  name  String @unique
  zones Zone[]
  pos Pos[]

  @@map("areas")
}

model Zone {
  id      Int @id @default(autoincrement())
  number  Int    @unique
  area_id Int

  area Area @relation(fields: [area_id], references: [id])
  pos Pos[]

  @@map("zones")
}

model Type {
  id       Int    @id @default(autoincrement())
  name     String
  subtypes Subtype[]
  pos Pos[]

  @@map("types")
}

model Subtype {
  id      Int @id @default(autoincrement())
  name    String
  type_id Int

  type Type @relation(fields: [type_id], references: [id])
  pos Pos[]

  @@map("subtypes")
}

model AuditLog {
  id         String   @id @default(uuid())
  entity     String
  entity_id  String?
  user_id    String?
  user_name  String
  action     String
  metadata   Json
  created_at DateTime @default(now())

  @@map("audit_logs")
}

model IdReference {
  id      Int       @id @default(autoincrement())
  counter Int       @default(autoincrement())
  type    AgentType @unique

  @@map("id_referecences")
}

model ResetPasswordToken {
  id         String   @id @default(uuid())
  token      String   @unique
  expires_at DateTime
  created_at DateTime @default(now())

  user_id String @unique
  user    User   @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@map("password_reset_tokens")
}
